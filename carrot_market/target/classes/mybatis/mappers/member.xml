<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mycompany.carrotMarket.mapper.UserMapper">
	<resultMap id="memResult" type="memberVO">
		<result property="id" column="id" />
		<result property="pwd" column="pwd" />
		<result property="name" column="name" />
		<result property="email" column="email" />
		<result property="joinDate" column="joinDate" />
	</resultMap>

	<select id="findById" resultType="memberVO"
		parameterType="memberDTO">
		<![CDATA[
			select * from member
			where id = #{id} and pw = #{pw}
		]]>
	</select>

	<insert id="insertMember" parameterType="memberVO">
		<![CDATA[
		 insert into member(id, pwd, name, nickname, email, region1, profile_img)
		 values(#{id}, #{pwd}, #{name}, #{nickname}, #{email}, #{region1}, #{profile_img})
		]]>
	</insert>

</mapper>